{
  "name": "honeycomb-api-v2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:domain": "vitest tests/unit/domain",
    "test:services": "vitest tests/unit/application/services",
    "test:mappers": "vitest tests/unit/infrastructure/mappers",
    "test:repos": "vitest tests/unit/infrastructure/repositories",
    "test:coverage": "vitest --coverage",
    "test:coverage:domain": "vitest tests/unit/domain --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "db:migrate": "tsx src/infrastructure/database/migrations/runner.ts",
    "db:seed": "tsx src/infrastructure/database/seeders/runner.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "-": "^0.0.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@slack/web-api": "^7.9.3",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^12.0.3",
    "mysql2": "^3.14.3",
    "oxide.ts": "^1.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "redis": "^5.8.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "tsyringe": "^4.10.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitest/ui": "^3.2.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "pino-pretty": "^14.2.0",
    "prettier": "^3.4.2",
    "sqlite3": "^5.1.7",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sqlite3"
    ]
  }
}
